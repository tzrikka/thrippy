    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to server",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Launch server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "cmd/thrippy/main.go",
            "args": [
                "--dev",
                "server"
            ]
        },
        {
            "name": "Launch client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "thrippy",
            "args": [
                "--dev",
                "link-templates"
            ]
        }
    ]
}
